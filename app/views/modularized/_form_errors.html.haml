%div{data: {'content-key' => 'form-errors'}}
  - if errors.present?
    .alert.alert-danger
      %button.close{ data: { dismiss: 'alert' } }
        &times;
      - error_msgs = errors.respond_to?(:full_messages) ? errors.full_messages : errors
      - error_msgs.each do |error|
        %div= error.html_safe
    :javascript
      $('html,body').animate({ scrollTop: $('.alert-danger').offset().top - 100 });
  - elsif defined?(flash_notice)
    .alert.alert-success
      %button.close{ data: { dismiss: 'alert' } }
        &times;
      %medium= flash_notice
